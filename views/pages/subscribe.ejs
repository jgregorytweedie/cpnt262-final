
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"
        integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog=="
        crossorigin="anonymous" />
    
    <link rel="stylesheet" href="assets/css/home.css">
    <link rel="stylesheet" href="assets/css/members.css">
    <link rel="stylesheet" href="assets/css/subscrib.css">
    <link rel="stylesheet" href="assets/css/gallery.css">
    <link rel="stylesheet" href="assets/css/main.css">

</head>

<body class=<%= current %>>
    <div class="wrapper">
        <!-- hero section -->
        <section class="header">
            <%- include('../partials/header'); %>

            <!-- nav bar  -->
            <%- include('../partials/nav'); %>
        </section>

        <fieldset class="signup">
            <div class="title">
                <h1>Subscribe</h1>
            </div>
            <form action="/users" method="post" class="form">
                <div class="textfield">
                    <p><label for="name">Username:<abbr title="requried" aria-label="required">*</abbr></label>
                        <input type="name" name="name" placeholder="How do we call you?"></p>
                    <!-- make the password minimum length of 10 characters -->
                    <p><label for="email">Email:<abbr title="requried" aria-label="required">*</abbr></label>
                        <input type="email" name="email" placeholder="Your email address"></p>

                    <ul class="check-box">
                        <li><input type="checkbox" id="promos" name="promoEmails" value="yes">
                            <label for="promos">I would like to recieve promotional emails</label>
                        </li>
                    </ul>
                    <button type="submit">Subscribe</button>
                </div>
            </form>
        </fieldset>

    </div>
    <!-- Footer -->
    <%- include('../partials/footer'); %>
    <!-- script -->
    <script type="module" src="js/client.js"></script>

</body>

</html>